<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="HeaderLayoutTheme">
        <item name="android:paddingTop">@dimen/day_section_list_padding</item>
        <item name="android:paddingLeft">@dimen/day_section_list_padding</item>
        <item name="android:paddingRight">@dimen/day_section_list_padding</item>
        <item name="android:paddingBottom">@dimen/day_section_list_padding</item>
        <!--<item name="android:paddingBottom">@dimen/day_section_list_padding_smaller</item>-->
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clipToPadding">false</item><!-- add button needed to be adjusted up -->
    </style>
    <style name="DayItemsListTheme">
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingLeft">@dimen/day_section_list_padding_left</item>
        <item name="android:paddingRight">@dimen/day_section_list_padding</item>
        <item name="android:paddingBottom">@dimen/day_section_list_padding</item>
        <item name="android:clipToPadding">false</item>
    </style>
    <style name="AddButton">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginTop">-3dp</item>
        <item name="android:src">@drawable/ic_add_circle_outline_black_48dp</item>
    </style>
    <style name="DialogDayItemButton">
        <item name="android:layout_width">42dp</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="HeaderTitleTextTheme">
        <item name="android:textColor">@color/white_transp_90</item><!-- create colors of percentages of black -->
    </style>
    <style name="DaySectionSummaryText">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">11sp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:background">@drawable/rounded_black_outline</item>
        <item name="android:visibility">invisible</item>
    </style>

</resources>
